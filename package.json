{
  "name": "healthcare-compliance-saas",
  "version": "1.0.0",
  "description": "Production-ready SaaS for regulated healthcare compliance",
  "private": true,
  "workspaces": [
    "web",
    "services/*",
    "shared"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=web",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test-unit": "npm run test:unit --workspaces",
    "test-integration": "npm run test:integration --workspaces",
    "test-e2e": "npm run test:e2e --workspace=web",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "security-scan": "npm audit --workspaces && trivy fs .",
    "deploy-staging": "cd infra/terraform && terraform apply -var-file=staging.tfvars",
    "deploy-prod": "cd infra/terraform && terraform apply -var-file=prod.tfvars",
    "seed": "npm run seed --workspace=services/ingest-api"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
