# Healthcare Compliance SaaS - Environment Variables
# Copy this file to .env.local and fill in your values

# Application Configuration
NEXT_PUBLIC_APP_NAME="Healthcare Compliance SaaS"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:8000"

# Google Cloud Platform
GOOGLE_CLOUD_PROJECT_ID="healthcare-compliance-saas"
GOOGLE_CLOUD_REGION="us-central1"

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-firebase-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="123456789"
NEXT_PUBLIC_FIREBASE_APP_ID="1:123456789:web:abcdef123456"

# Firebase Admin (Server-side only)
FIREBASE_ADMIN_PROJECT_ID="your-firebase-project-id"
FIREBASE_ADMIN_CLIENT_EMAIL="firebase-adminsdk@your-project.iam.gserviceaccount.com"
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# API Configuration
API_BASE_URL="https://api.healthcare-compliance.com"
INGEST_API_URL="https://ingest-api-service-url"
AI_ORCHESTRATOR_URL="https://ai-orchestrator-service-url"
ALM_ADAPTERS_URL="https://alm-adapters-service-url"

# BigQuery Configuration
BIGQUERY_DATASET_ID="compliance_data"
BIGQUERY_LOCATION="us-central1"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_ERROR_REPORTING="true"
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING="true"

# Development
NODE_ENV="development"
NEXT_PUBLIC_DEBUG="false"

# Security
NEXT_PUBLIC_CSP_NONCE=""

# Third-party Integrations
NEXT_PUBLIC_SENTRY_DSN=""
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_HOTJAR_ID=""

# ALM Tool Configuration (for frontend display)
NEXT_PUBLIC_ENABLE_JIRA_INTEGRATION="true"
NEXT_PUBLIC_ENABLE_AZURE_DEVOPS_INTEGRATION="true"
NEXT_PUBLIC_ENABLE_POLARION_INTEGRATION="true"

# Compliance Standards
NEXT_PUBLIC_SUPPORTED_STANDARDS="FDA_QMSR,ISO_13485,IEC_62304,ISO_14971,ISO_27001,GDPR,HIPAA"

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE="10485760"  # 10MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES="pdf,docx,xlsx,txt,md"

# Rate Limiting
NEXT_PUBLIC_RATE_LIMIT_REQUESTS="100"
NEXT_PUBLIC_RATE_LIMIT_WINDOW="900"  # 15 minutes

# Monitoring and Observability
NEXT_PUBLIC_ENABLE_TRACING="true"
NEXT_PUBLIC_TRACE_SAMPLE_RATE="0.1"
