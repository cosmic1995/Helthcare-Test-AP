{
  "name": "healthcare-compliance-web",
  "version": "1.0.0",
  "description": "Healthcare Compliance SaaS - Frontend Application",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=__tests__",
    "test:integration": "jest --testPathPattern=integration",
    "test:security": "jest --testPathPattern=security",
    "test:accessibility": "jest --testPathPattern=accessibility",
    "test:compliance": "jest --testPathPattern=compliance",
    "test:ci": "jest --coverage --watchAll=false --ci --reporters=default --reporters=jest-junit",
    
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report",
    "e2e:compliance": "playwright test --grep=compliance",
    "e2e:security": "playwright test --grep=security",
    "e2e:accessibility": "playwright test --grep=accessibility",
    "e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "e2e:ci": "playwright test --reporter=html --reporter=junit",
    
    "test:all": "npm run test:ci && npm run e2e:ci",
    "test:healthcare": "npm run test:compliance && npm run test:security && npm run e2e:compliance",
    "test:audit": "npm run test:all && npm run test:accessibility",
    
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "analyze": "cross-env ANALYZE=true next build",
    
    "validate:compliance": "npm run type-check && npm run lint && npm run test:compliance",
    "validate:security": "npm run test:security && npm run e2e:security",
    "validate:accessibility": "npm run test:accessibility && npm run e2e:accessibility",
    "validate:all": "npm run validate:compliance && npm run validate:security && npm run validate:accessibility"
  },
